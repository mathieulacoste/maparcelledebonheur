{% extends '@MaParcelleDeBonheur/Default/base.html.twig' %}

{% block title %} <title> Contact </title> {% endblock %}

{% block content %}

    <div class="imgdefondopaque">
        <div class="container-fluid">
            <div class="container">
                <div class="row">
                    <div class="offset-lg-5 col-lg-2 text-center">
                        {{ form_start(formView) }}

                        <div class="textformulaire">{{ form_label(formView.name,'Nom') }}</div>
                        <div>{{ form_widget(formView.name) }}</div>

                        <div class="textformulaire">{{ form_label(formView.firstname,'Prénom') }}</div>
                        <div>{{ form_widget(formView.firstname) }}</div>

                        <div class="textformulaire">{{ form_label(formView.mail,'Adresse Mail') }}</div>
                        <div>{{ form_widget(formView.mail) }}</div>

                        <div class="textformulaire">{{ form_label(formView.phonenumber,'Numéro de Téléphone') }}</div>
                        <div>{{ form_widget(formView.phonenumber) }}</div>

                        <div class="textformulaire">{{ form_label(formView.subject,'Sujet') }}</div>
                        <div>{{ form_widget(formView.subject) }}</div>

                        <div class="textformulaire">{{ form_label(formView.message,'Votre Message') }}</div>
                        <div>{{ form_widget(formView.message) }}</div>

                        {{ form_end(formView) }}
                    </div>
                </div>
            </div>
        </div>
    </div>
{% endblock %}